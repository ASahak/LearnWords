{
  "presets": ["module:metro-react-native-babel-preset"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./"],
        "extensions": [
          ".ios.ts",
          ".android.ts",
          ".ts",
          ".ios.tsx",
          ".android.tsx",
          ".tsx",
          ".jsx",
          ".js",
          ".json"
        ],
        "alias": {
          "@navigation": "./src/navigation",
          "@screens": "./src/screens",
          "@core": "./src/core",
          "@components": "./src/components",
          "@assets": "./assets",
          "@services": "./src/services",
          "@utils": "./src/utils",
          "@static": "./src/static",
          "@hooks": "./src/hooks"
        }
      }
    ]
  ]
}
